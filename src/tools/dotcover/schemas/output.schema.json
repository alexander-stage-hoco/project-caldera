{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "dotCover Output",
  "description": "Output schema for dotCover code coverage analysis tool. Reports statement coverage at assembly, type, and method levels.",
  "type": "object",
  "required": [
    "metadata",
    "data"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Standard Caldera envelope metadata",
      "required": [
        "tool_name",
        "tool_version",
        "run_id",
        "repo_id",
        "branch",
        "commit",
        "timestamp",
        "schema_version"
      ],
      "properties": {
        "tool_name": {
          "type": "string",
          "const": "dotcover"
        },
        "tool_version": {
          "type": "string"
        },
        "run_id": {
          "type": "string",
          "format": "uuid"
        },
        "repo_id": {
          "type": "string",
          "format": "uuid"
        },
        "branch": {
          "type": "string"
        },
        "commit": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{40}$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "schema_version": {
          "const": "1.0.0"
        }
      }
    },
    "data": {
      "type": "object",
      "description": "Coverage analysis data",
      "required": [
        "tool",
        "tool_version",
        "summary",
        "assemblies",
        "types",
        "methods"
      ],
      "properties": {
        "tool": {
          "type": "string",
          "const": "dotcover"
        },
        "tool_version": {
          "type": "string"
        },
        "summary": {
          "type": "object",
          "description": "Aggregate coverage statistics",
          "required": [
            "total_assemblies",
            "total_types",
            "total_methods",
            "covered_statements",
            "total_statements",
            "statement_coverage_pct"
          ],
          "properties": {
            "total_assemblies": {
              "type": "integer",
              "minimum": 0
            },
            "total_types": {
              "type": "integer",
              "minimum": 0
            },
            "total_methods": {
              "type": "integer",
              "minimum": 0
            },
            "covered_statements": {
              "type": "integer",
              "minimum": 0
            },
            "total_statements": {
              "type": "integer",
              "minimum": 0
            },
            "statement_coverage_pct": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "error": {
              "type": "string",
              "description": "Error message if analysis failed"
            }
          }
        },
        "assemblies": {
          "type": "array",
          "description": "Assembly-level coverage metrics",
          "items": {
            "type": "object",
            "required": [
              "name",
              "covered_statements",
              "total_statements",
              "statement_coverage_pct"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Assembly name"
              },
              "covered_statements": {
                "type": "integer",
                "minimum": 0
              },
              "total_statements": {
                "type": "integer",
                "minimum": 0
              },
              "statement_coverage_pct": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              }
            }
          }
        },
        "types": {
          "type": "array",
          "description": "Type (class) level coverage metrics",
          "items": {
            "type": "object",
            "required": [
              "assembly",
              "name",
              "covered_statements",
              "total_statements",
              "statement_coverage_pct"
            ],
            "properties": {
              "assembly": {
                "type": "string",
                "description": "Parent assembly name"
              },
              "namespace": {
                "type": ["string", "null"],
                "description": "Namespace containing the type"
              },
              "name": {
                "type": "string",
                "description": "Type (class) name"
              },
              "file_path": {
                "type": ["string", "null"],
                "description": "Source file path (repo-relative) if available"
              },
              "covered_statements": {
                "type": "integer",
                "minimum": 0
              },
              "total_statements": {
                "type": "integer",
                "minimum": 0
              },
              "statement_coverage_pct": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              }
            }
          }
        },
        "methods": {
          "type": "array",
          "description": "Method-level coverage metrics",
          "items": {
            "type": "object",
            "required": [
              "assembly",
              "type_name",
              "name",
              "covered_statements",
              "total_statements",
              "statement_coverage_pct"
            ],
            "properties": {
              "assembly": {
                "type": "string",
                "description": "Parent assembly name"
              },
              "type_name": {
                "type": "string",
                "description": "Parent type (class) name"
              },
              "name": {
                "type": "string",
                "description": "Method signature"
              },
              "covered_statements": {
                "type": "integer",
                "minimum": 0
              },
              "total_statements": {
                "type": "integer",
                "minimum": 0
              },
              "statement_coverage_pct": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              }
            }
          }
        }
      }
    }
  }
}
