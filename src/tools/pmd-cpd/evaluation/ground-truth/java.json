    "SemanticDupLiterals.java": {
      "expected_clones_standard": {
        "count": 0,
        "count_range": [0, 1]
      },
      "expected_clones_semantic": {
        "count": 2,
        "count_range": [1, 4],
        "requires_ignore_literals": true
      },
      "description": "Same logic with different literal values - requires semantic mode"
    }
  },
  "cross_file_expectations": {
    "cross_file_a_b": {
      "expected_cross_file_clones": 4,
