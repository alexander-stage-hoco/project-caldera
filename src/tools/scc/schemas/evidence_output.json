{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dd-platform.example.com/schemas/evidence/size_metrics.json",
  "title": "Size Metrics Evidence",
  "description": "Evidence output from scc size/LOC analysis",
  "type": "object",
  "required": ["schema_version", "run_id", "evidence_type", "items", "summary"],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of this schema",
      "const": "1.0"
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this analysis run",
      "pattern": "^poc-scc-[0-9]{8}-[0-9]{6}$"
    },
    "evidence_type": {
      "type": "string",
      "description": "Type of evidence",
      "const": "size_metrics"
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of evidence creation",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "description": "Individual evidence items per language",
      "items": {
        "$ref": "#/definitions/EvidenceItem"
      },
      "minItems": 1
    },
    "summary": {
      "$ref": "#/definitions/Summary"
    }
  },
  "definitions": {
    "EvidenceItem": {
      "type": "object",
      "required": ["evidence_id", "type", "source", "data"],
      "properties": {
        "evidence_id": {
          "type": "string",
          "description": "Unique identifier for this evidence item",
          "pattern": "^poc-scc-.+/size/.+$"
        },
        "type": {
          "type": "string",
          "description": "Type of evidence item",
          "const": "size_loc"
        },
        "source": {
          "type": "string",
          "description": "Tool that generated this evidence",
          "const": "scc"
        },
        "provenance": {
          "$ref": "#/definitions/Provenance"
        },
        "data": {
          "$ref": "#/definitions/SizeData"
        }
      }
    },
    "Provenance": {
      "type": "object",
      "description": "Origin and context of the evidence",
      "required": ["tool", "timestamp"],
      "properties": {
        "tool": {
          "type": "string",
          "description": "Name of the tool"
        },
        "version": {
          "type": "string",
          "description": "Version of the tool"
        },
        "timestamp": {
          "type": "string",
          "description": "When the analysis was run",
          "format": "date-time"
        },
        "command": {
          "type": "string",
          "description": "Command used to run the tool"
        }
      }
    },
    "SizeData": {
      "type": "object",
      "description": "Size metrics for a language",
      "required": ["language", "files", "lines_total", "lines_code", "lines_comment", "lines_blank", "bytes", "complexity"],
      "properties": {
        "language": {
          "type": "string",
          "description": "Programming language name"
        },
        "files": {
          "type": "integer",
          "description": "Number of files",
          "minimum": 0
        },
        "lines_total": {
          "type": "integer",
          "description": "Total lines including blanks and comments",
          "minimum": 0
        },
        "lines_code": {
          "type": "integer",
          "description": "Lines of code (excluding blanks and comments)",
          "minimum": 0
        },
        "lines_comment": {
          "type": "integer",
          "description": "Lines of comments",
          "minimum": 0
        },
        "lines_blank": {
          "type": "integer",
          "description": "Blank lines",
          "minimum": 0
        },
        "bytes": {
          "type": "integer",
          "description": "Total bytes",
          "minimum": 0
        },
        "complexity": {
          "type": "integer",
          "description": "Estimated complexity (scc heuristic)",
          "minimum": 0
        },
        "weighted_complexity": {
          "type": "number",
          "description": "Weighted complexity score",
          "minimum": 0
        }
      }
    },
    "Summary": {
      "type": "object",
      "description": "Aggregate summary of all evidence",
      "required": ["total_files", "total_loc", "languages"],
      "properties": {
        "total_files": {
          "type": "integer",
          "description": "Total number of files across all languages",
          "minimum": 0
        },
        "total_loc": {
          "type": "integer",
          "description": "Total lines of code",
          "minimum": 0
        },
        "total_lines": {
          "type": "integer",
          "description": "Total lines including blanks and comments",
          "minimum": 0
        },
        "total_comments": {
          "type": "integer",
          "description": "Total comment lines",
          "minimum": 0
        },
        "total_blanks": {
          "type": "integer",
          "description": "Total blank lines",
          "minimum": 0
        },
        "total_bytes": {
          "type": "integer",
          "description": "Total bytes",
          "minimum": 0
        },
        "total_complexity": {
          "type": "integer",
          "description": "Total complexity",
          "minimum": 0
        },
        "languages": {
          "type": "integer",
          "description": "Number of languages detected",
          "minimum": 0
        },
        "comment_ratio": {
          "type": "number",
          "description": "Ratio of comments to total lines",
          "minimum": 0,
          "maximum": 1
        },
        "complexity_per_loc": {
          "type": "number",
          "description": "Complexity per line of code",
          "minimum": 0
        }
      }
    }
  }
}
