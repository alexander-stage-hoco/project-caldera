{
  "$schema": "../../schemas/config.json",
  "classification": {
    "confidence_threshold": 0.5,
    "custom_rules": {
      "path": {
        "test": ["pytest/", "hypothesis/", "fixtures/"]
      },
      "filename": {
        "test": ["^conftest\\.py$", "^pytest_.*\\.py$"]
      }
    },
    "override": {
      "migrations/": "generated"
    }
  },
  "ignore": {
    "additional_patterns": [
      "*.pyc",
      "__pycache__/",
      ".tox/",
      ".mypy_cache/",
      ".pytest_cache/",
      "*.egg-info/",
      ".eggs/",
      "htmlcov/"
    ],
    "respect_gitignore": true
  },
  "performance": {
    "max_file_size_bytes": 104857600,
    "skip_binary_detection": false
  }
}
