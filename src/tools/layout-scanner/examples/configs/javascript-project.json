{
  "$schema": "../../schemas/config.json",
  "classification": {
    "confidence_threshold": 0.5,
    "custom_rules": {
      "path": {
        "vendor": ["node_modules/", ".pnpm/", ".yarn/"],
        "generated": ["dist/", ".next/", ".nuxt/", ".output/", "build/"],
        "test": ["cypress/", "playwright/", "__tests__/"]
      },
      "filename": {
        "config": ["^\\.(babel|eslint|prettier|stylelint)rc.*$"]
      }
    },
    "override": {
      ".storybook/": "docs"
    }
  },
  "ignore": {
    "additional_patterns": [
      "*.log",
      "coverage/",
      ".cache/",
      ".turbo/",
      ".vercel/",
      ".netlify/"
    ],
    "respect_gitignore": true
  },
  "performance": {
    "max_file_size_bytes": 104857600,
    "skip_binary_detection": false
  }
}
