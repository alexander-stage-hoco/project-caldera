<section id="{{ section_id }}" class="report-section">
    <h2>Exposed Secrets</h2>

    {% if has_secrets %}
    <div class="metric-grid">
        <div class="metric-card">
            <div class="label">Total Findings</div>
            <div class="value">{{ total_count | format_number }}</div>
        </div>
        <div class="metric-card">
            <div class="label">Critical</div>
            <div class="value" style="color: var(--color-critical);">{{ critical_count | format_number }}</div>
        </div>
        <div class="metric-card">
            <div class="label">High</div>
            <div class="value" style="color: var(--color-high);">{{ high_count | format_number }}</div>
        </div>
        <div class="metric-card">
            <div class="label">Risk Level</div>
            <div class="value">
                <span class="risk-indicator risk-{{ risk_level }}">{{ risk_level | upper }}</span>
            </div>
        </div>
    </div>

    <div class="metric-grid">
        <div class="metric-card">
            <div class="label">In Current HEAD</div>
            <div class="value">{{ in_head_count | format_number }}</div>
        </div>
        <div class="metric-card">
            <div class="label">In History Only</div>
            <div class="value">{{ in_history_count | format_number }}</div>
        </div>
    </div>

    {% if has_critical %}
    <div class="alert alert-critical">
        <strong>Critical secrets detected.</strong> These require immediate attention and remediation.
    </div>
    {% endif %}

    <div class="subsection">
        <h3>By Severity</h3>
        <table>
            <thead>
                <tr>
                    <th>Severity</th>
                    <th class="number">Count</th>
                    <th class="number">Unique</th>
                    <th class="number">In HEAD</th>
                </tr>
            </thead>
            <tbody>
            {% for row in summary %}
                <tr>
                    <td><span class="severity-badge {{ row.severity | severity_class }}">{{ row.severity }}</span></td>
                    <td class="number">{{ row.count | format_number }}</td>
                    <td class="number">{{ row.unique_count | format_number }}</td>
                    <td class="number">{{ row.in_head_count | format_number }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% if by_rule %}
    <div class="subsection">
        <h3>By Secret Type</h3>
        <table>
            <thead>
                <tr>
                    <th>Rule</th>
                    <th>Type</th>
                    <th class="number">Count</th>
                    <th class="number">Files</th>
                </tr>
            </thead>
            <tbody>
            {% for row in by_rule %}
                <tr>
                    <td><code>{{ row.rule_id }}</code></td>
                    <td>{{ row.secret_type or '-' }}</td>
                    <td class="number">{{ row.count | format_number }}</td>
                    <td class="number">{{ row.file_count | format_number }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

    {% if hotspot_files %}
    <div class="subsection">
        <h3>Hotspot Files</h3>
        <table>
            <thead>
                <tr>
                    <th>File</th>
                    <th class="number">Secrets</th>
                    <th class="number">Critical</th>
                    <th class="number">High</th>
                    <th class="number">In HEAD</th>
                </tr>
            </thead>
            <tbody>
            {% for row in hotspot_files %}
                <tr>
                    <td><code>{{ row.relative_path | truncate_path }}</code></td>
                    <td class="number">{{ row.secret_count | format_number }}</td>
                    <td class="number">{{ row.severity_critical | format_number }}</td>
                    <td class="number">{{ row.severity_high | format_number }}</td>
                    <td class="number">{{ row.secrets_in_head | format_number }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

    {% else %}
    <div class="empty-state">
        <p>No exposed secrets detected by gitleaks.</p>
    </div>
    {% endif %}
</section>
